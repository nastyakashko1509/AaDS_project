<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AaDS_project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AaDS_project"
    xmlns:topic_three="clr-namespace:AaDS_project.Topic_3_task_4"
    xmlns:topic_two_one="clr-namespace:AaDS_project.Topic_2_task_1"
    xmlns:topic_two_nine="clr-namespace:AaDS_project.Topic_2_task_9"
    xmlns:topic_four="clr-namespace:AaDS_project.Topic_4_Task_9"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Главная"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Время выполнения 1-ой задачи (Тема 2)"
        ContentTemplate="{DataTemplate topic_two_one:LeadTimeSolution1}"
        Route="LeadTimeSolution1" />

    <ShellContent
        Title="Темя 2, задача 9"
        ContentTemplate="{DataTemplate topic_two_nine:LeadTimeTask9}"
        Route="LeadTimeTask9" />

    <ShellContent
        Title="Тема 3, задача 4 (2-ое решение)"
        ContentTemplate="{DataTemplate topic_three:LeadTimeTwoSolution}"
        Route="LeadTimeTwoSolution" />

    <ShellContent
        Title="Тема 4, задача 9"
        ContentTemplate="{DataTemplate topic_four:LeadTimeSolutions}"
        Route="LeadTimeSolutions" />

</Shell>