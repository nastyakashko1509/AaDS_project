<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AaDS_project.Topic_3_task_4.LeadTimeTwoSolution"
             Title="Время выполнения задачи"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="⏳ Замер времени выполнения"
                   FontSize="20"
                   TextColor="#2c3e50"
                   HorizontalOptions="Center" />

            <Frame BackgroundColor="#ECF0F1"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">
                    <Button Text="▶ Запустить тестирование"
                            x:Name="RunButton"
                            Clicked="RunButton_Clicked"
                            BackgroundColor="#5DADE2"
                            TextColor="White"
                            CornerRadius="10"
                            HorizontalOptions="Fill"/>

                    <Label x:Name="ResultLabel"
                           Text="Нажмите кнопку для запуска"
                           FontSize="16"
                           TextColor="#2c3e50"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>