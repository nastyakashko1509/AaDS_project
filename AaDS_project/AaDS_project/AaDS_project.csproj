	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Topic_2_task_1\VisualizationOfTheFirstSolution1.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Topic_2_task_9\LeadTimeTask9.xaml">
